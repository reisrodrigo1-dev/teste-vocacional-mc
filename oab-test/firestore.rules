rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir que usuários autenticados criem e acessem seus próprios documentos
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
      allow create: if request.auth.uid == request.resource.data.id;
    }
    
    // Permitir que usuários autenticados criem e acessem seus próprios testes e subcoleção de tentativas
    match /tests/{userId} {
      allow read, write: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
      
      // Permitir acesso à subcoleção attempts
      match /attempts/{testId} {
        allow read, write: if request.auth.uid == userId;
        allow create: if request.auth.uid == userId;
      }
    }
  }
}
